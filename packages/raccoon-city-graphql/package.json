{
    "name": "raccoon-city-graphql",
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "start": "node dist/index.js",
        "start:forever": "NODE_ENV=production forever start dist/index.js &",
        "stop:forever": "NODE_ENV=production forever stop dist/index.js &",
        "start:dev": "ts-node src/index.ts",
        "start:pm2": "NODE_ENV=production pm2 start dist/index.js --name \"raccoon-city-graphql\" &",
        "stop:pm2": "pm2 stop \"raccoon-city-graphql\" &",
        "copy-to-dist": "copyfiles --up 1 src/schemas/* dist",
        "copyspec": "copyfiles appspec.yml dist",
        "debug": "dotenv -- nodemon -e ts,graphql -x node --inspect=9200 -r ts-node/register src/index.ts",
        "build": "NODE_ENV=production rimraf dist && tsc && yarn copy-to-dist && yarn copyspec",
        "precommit": "lint-staged",
        "prettier": "pretty-quick"
    },
    "dependencies": {
        "@types/mongoose": "^5.5.32",
        "apollo-link": "^1.2.13",
        "apollo-server": "^2.9.12",
        "array-move": "^2.2.1",
        "aws-sdk": "^2.610.0",
        "bcryptjs": "^2.4.3",
        "copyfiles": "^2.1.1",
        "dotenv": "^8.2.0",
        "express-graphql": "^0.9.0",
        "firebase": "^7.5.0",
        "firebase-admin": "^8.8.0",
        "forever": "^2.0.0",
        "graphql": "^14.5.8",
        "graphql-upload": "^8.1.0",
        "ioredis": "^4.16.3",
        "jsonwebtoken": "8.5.1",
        "lint-staged": "^9.4.3",
        "marked": "^0.7.0",
        "merge-graphql-schemas": "^1.7.3",
        "mongoose": "^5.7.11",
        "multer": "^1.4.2",
        "papaparse": "^5.1.0",
        "pretty-quick": "^2.0.1",
        "prisma-client-lib": "^1.34.10",
        "ramda": "^0.26.1",
        "set-value": "^3.0.1",
        "sharp": "^0.23.3",
        "sync-exec": "^0.6.2",
        "uuidv4": "^6.0.0",
        "winston": "^3.2.1",
        "winston-cloudwatch": "^2.3.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/jsonwebtoken": "^8.3.9",
        "@types/node": "10.17.5",
        "@types/papaparse": "^5.0.2",
        "@types/sharp": "^0.24.0",
        "dotenv-cli": "1.4.0",
        "lint-staged": "^9.4.3",
        "nodemon": "^2.0.1",
        "prettier": "^1.19.1",
        "prisma": "1.34.10",
        "rimraf": "^3.0.0",
        "ts-node": "^8.5.2",
        "typescript": "^3.7.2"
    },
    "lint-staged": {
        "**/*.ts": [
            "prettier",
            "git add"
        ]
    }
}
